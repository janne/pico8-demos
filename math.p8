function new_task()
	selected=0
	answer=""
	op="+"
	if(flr(rnd(2))==0) then
		op="-"
		num1=flr(rnd(5))+10
		num2=flr(rnd(num1))
		right_answer=num1-num2
	else
		num1=flr(rnd(14))
		local from=max(10-num1,0)
		local r
		r=14-from-num1+1
		num2=flr(rnd(r))+from
		right_answer=num1+num2
	end
		printh(num1..op..num2)
	return {num1=num1,num2=num2,op=op}
end

